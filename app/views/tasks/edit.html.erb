<h2>タスク編集</h2>

<%= form_with model: @task, local: true do |f| %>
  <%= f.label :title, "タイトル" %>
  <%= f.text_field :title %>

  <%= f.label :content, "内容" %>
  <%= f.text_area :content %>

  <%= f.label :deadline, "終了期限" %>
  <%= f.date_select :deadline %>

  <%= f.submit "タスク更新" %>
  <%= link_to "タスク削除", @task, method: :delete, data: { confirm: "タスク\"#{@task.title}\"を削除しますか？" } %>
<% end %>