<h2>タスク一覧</h2>

<%= form_with url: root_path, method: :get, local: true do |f| %>
  <%= f.select "sort", options_for_select({作成日時順: "create", 終了期限順: "deadline"}), include_blank: "選択する" %>
  <%= f.submit "並べ替え" %>
<% end %>

<% @tasks.each do |task| %>
  <p><%= link_to task.title, task_path(task) %></p>
<% end %>

<%= link_to "タスク作成", new_task_path %>